---
layout: blog-layout.njk
pagination:
  data: collections.post
  size: 50
  reverse: true
  alias: posts
---
<div class="container">

{% for post in posts %}

  <article class="blogpost">
    <h1>
      <a href="{{ post.url | url }}">{{ post.data.title }}</a>
    </h1>
    
    <time datetime="{{ post.date | dateIso }}">{{ post.date | dateReadable }}</time>

    {% excerpt post %}

    <a class="readmore" href="{{ post.url | url }}" aria-label="Read more on {{ post.data.title }}">&hellip; continue this article</a>
  </article>

{% endfor %}

</div>